<h1>Sale partido!</h1>

<%= form_for :match, url: matches_path do |f| %>

  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2>Revise bien lo que puso se√±ora</h2>
      <ul>
        <% @match.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :place %><br>
    <%= f.text_field :place %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
